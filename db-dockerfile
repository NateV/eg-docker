FROM mysql:5.7 
 
RUN apt-get update && apt-get -y install curl && \ 
        curl -sL "https://github.com/NateV/Expungement-Generator/blob/master/migrations/1 - eg_schema.sql" > /docker-entrypoint-initdb.d/1_eg_schema.sql && \ 
        curl -sL "https://github.com/NateV/Expungement-Generator/blob/master/migrations/2 - cpcms_aopc_summary.sql" > /docker-entrypoint-initdb.d/2_cpcms_aopc_summary.sql && \ 
        curl -sL "https://github.com/NateV/Expungement-Generator/blob/master/migrations/3 - database_initial_data.sql" > /docker-entrypoint-initdb.d/3_database_initial_data.sql
